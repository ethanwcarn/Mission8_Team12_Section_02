@*
    Shared/_Layout.cshtml – Master Layout Page
    Defines the shared HTML structure for every page in the application:
      - <head> with meta tags, Bootstrap CSS, and custom site CSS
      - Navigation bar with links to Home, View Tasks, and Add Task
      - A <main> container where individual view content is injected via @RenderBody()
      - Footer with copyright
      - JavaScript includes (jQuery, Bootstrap, site.js) loaded at the bottom for performance
      - A "Scripts" section that individual views can use to inject page-specific scripts
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @* Page title – each view sets ViewData["Title"]; it appears in the browser tab *@
    <title>@ViewData["Title"] - Mission8</title>

    <script type="importmap"></script>

    @* CSS References – Bootstrap for responsive layout/components, then custom site styles *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mission8.styles.css" asp-append-version="true" />
</head>
<body>
    @* ========== HEADER / NAVIGATION BAR ========== *@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* Brand logo/link – clicking "Mission8" returns to the home page *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mission8</a>

                @* Hamburger toggle button for mobile screens *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @* Navigation links – collapse into hamburger menu on small screens *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tasks" asp-action="Quadrants">View Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tasks" asp-action="AddEdit">Add Task</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @* ========== MAIN CONTENT AREA ========== *@
    @* Each view's content is injected here by @RenderBody() *@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* ========== FOOTER ========== *@
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Mission8
        </div>
    </footer>

    @* ========== JAVASCRIPT INCLUDES ========== *@
    @* jQuery – required by Bootstrap and jQuery Validation *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @* Bootstrap JS bundle – powers navbar toggling, modals, tooltips, etc. *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* Custom site-wide JavaScript *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Optional scripts section – views can inject page-specific scripts here
       (e.g., the AddEdit view can include validation scripts) *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
