@*
    Home/Index.cshtml – Landing Page
    The first page users see when visiting the site.
    Displays a welcome message explaining the Covey Time Management Matrix
    and provides two large navigation buttons: "View Tasks" and "Add Task".
*@

@{
    ViewData["Title"] = "Task Manager";
}

@* Main content container with top margin for spacing *@
<div class="container mt-5">

    @* Welcome Section – Centered heading and description *@
    <div class="row mb-5">
        <div class="col text-center">
            <h1 class="display-4">Welcome to Your Time Management Matrix</h1>
            <p class="lead">
                Organize your tasks using Stephen Covey's Quadrant system.
            </p>
        </div>
    </div>

    @* Button Section – Two large buttons side by side for primary navigation *@
    <div class="row justify-content-center text-center">

        @* "View Tasks" button – navigates to the Quadrants page (TasksController.Quadrants) *@
        <div class="col-md-5 mb-3">
            <div class="d-grid">
                <a asp-controller="Tasks"
                   asp-action="Quadrants"
                   class="btn btn-primary btn-lg p-4">
                    View Tasks
                </a>
            </div>
        </div>

        @* "Add Task" button – navigates to the Add/Edit form (TasksController.AddEdit with no ID) *@
        <div class="col-md-5 mb-3">
            <div class="d-grid">
                <a asp-controller="Tasks"
                   asp-action="AddEdit"
                   class="btn btn-success btn-lg p-4">
                    Add Task
                </a>
            </div>
        </div>

    </div>

</div>
